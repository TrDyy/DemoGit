@{
    ViewBag.Title = "ShowSachTheoNXB";
    Layout = "~/Views/Shared/UserLayout.cshtml";
    
}


@using BTTL_Buoi9.Models;
@model List<Sach>


<style>
    body {
        font-family: Arial, sans-serif;
        text-align: center;
        background-color: #f0f0f0;
    }

    h1 {
        margin-top: 20px;
    }

    .book-list {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 30px;
        padding: 20px;
    }

    .book-item {
        background-color: white;
        border: 1px solid #ccc;
        padding: 10px;
        width: 150px;
        text-align: center;
    }

        .book-item img {
            width: 100%;
            height: auto;
        }

        .book-item p {
            margin: 10px 0;
        }

        .book-item a {
            text-decoration: none;
            color: blue;
        }
</style>

<h1>Danh sách sách với nhà xuất bản </h1>
<div class="book-list">
    @foreach (Sach item in Model)
    {
        <div class="book-item">
            <img src="~/HinhAnhSP/@item.AnhBia" alt="Book 1">
            <p>Tiêu đề: @item.TenSach</p>
            @*<a href="#">Xem chi tiết</a>*@
            <a>@Html.ActionLink("Xem chi tiết", "ChiTietSach", "Sach", new { id = item.MaSach }, null)</a>
        </div>
    }

</div>
