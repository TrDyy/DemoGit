@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@using BTTL_Buoi9.Models
@model KhachHang


<h2>DangKy</h2>
@using (Html.BeginForm("DangKy", "NguoiDung", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.HoTen, "Họ Tên:", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TaiKhoan, "Tài Khoản:", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.TaiKhoan, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MatKhau, "Mật Khẩu:", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.MatKhau, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NhapLaiMatKhau, "Nhập lại Mật Khẩu:", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.NhapLaiMatKhau, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NhapLaiMatKhau, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DienThoai, "Điện Thoại:", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.DienThoai, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DienThoai, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NgaySinh, "Ngày sinh", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.NgaySinh, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, "Email:", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DiaChi, "Địa chỉ:", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control" })
    </div>
    <div class="btn-primary">
        <button type="submit" class="btn btn-primary">Đăng ký</button>

    </div>
}